<div class="banner" style= "background-image:url(<%=image_path("dogs-background.jpg")%>);">
  <div class="banner-content">

   <h1> ALL THE PETS LOVE YOU CAN HANDLE</h1>
    <div class="search-container">
    <%= form_tag("/search", class: "search-form") do %>
        <%= text_field_tag(:q, nil, placeholder: "Search for dog, cat or elephant")%>
        <a href="" class="search-button">
          <span><i class="fa fa-search"></i></span>
        </a>
     <% end %>
    </div>
    <p>
      <span id="banner-typed-text"></span>
    </p>

  </div>
</div>

<div class="container">
  <div class="row">
    <div class="card_design">
    <% @pets.each do |pet| %>
      <div class="col-xs-12 col-sm-4">
        <%= render partial: 'shared/pet-card', locals: { pet: pet } %>
      </div>
    <% end %>
    </div>
  </div>
</div>

