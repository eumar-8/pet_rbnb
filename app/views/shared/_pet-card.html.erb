<div class="card">
  <% if pet.photo? %>
  <div class="card-header" style="background-image: url(<%= image_path(pet.photo) %>);">
  </div>
  <% else %>
  <div class="card-header" style="background-image: url(<%= image_path("monkey.jpg") %>);">
  </div>
  <% end %>

  <div class="card-content">
    <p><%= link_to pet.name, pet_path(pet), class: "card-link" %></p>
    <p><%=pet.description%></p>

    <div class="card-user-details">
      <img src='https://kitt.lewagon.com/placeholder/users/krokrob' class="avatar-large"/>
      <div class= "card-user-content">
        <p><%=pet.user.name%></p>
        <p><%=pet.user.location%></p>
      </div>
    </div>

    <div class="card-body">

    </div>
  </div>
</div>
