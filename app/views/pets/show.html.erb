<div class="container pet_container">
  <div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-8">
      <div class="big-part">
        <div class="row">
          <div class="col-xs-2"></div>
          <div class="col-xs-8">
            <div class="pet_picture">
               <%= cl_image_tag(@pet.photo, width: 300, height: 250, crop: :fill) %>
            </div>
          </div>
          <div class="col-xs-2"></div>
         </div> <!-- close row -->

        <div class="row">
          <div class="col-xs-2"></div>
          <div class="col-xs-8">
            <div class="pet_attributes">
              <h2><%= @pet.name %></h2>
                <ul class="list-unstyled">
                  <li><%= @pet.species.capitalize %></li>
                  <li>Is <%= @pet.age %> years old</li>
                  <li>Belongs to <%= @pet.user.name %></li>
                  <li>Lives in <%= @pet.user.location %></li>
                </ul>
            </div>
            <div class="pet_description">
              <p><%= @pet.description %></p>
            </div>
          </div>
          <div class="col-xs-2"></div>
        </div><!-- close row -->
      </div>
    </div>
    <div class="col-xs-2"></div>
  </div> <!-- close big row -->
    <div class="row">
      <div class="col-xs-2"></div>
      <div class="col-xs-8">
        <div class="pet_booking_box">
          <h2>Schedule</h2>
          <h4>DKK <%= @pet.price %> per day</h4>
          <%= simple_form_for([@pet, @booking], url: pet_bookings_path(@pet), method: :post) do |f| %>
            <%= f.input :date_from, label: "Pick-up", as: :string, input_html: { data: {provide: "datepicker"} }  %>
            <%= f.input :date_to, label: "Drop-off", as: :string, input_html: { data: {provide: "datepicker"} }  %>
                <br>
            <div class="form-actions">
                  <%= f.button :submit, "Book", class: "btn btn-success" %>
            </div>
              <% end %>
        </div>
      </div>
      <div class="col-xs-2"></div>
    </div><!-- close row -->
</div> <!-- container -->


