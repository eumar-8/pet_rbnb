<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <div class="form-wrapper">

        <h1>Sign-up your pet</h1>

        <%= simple_form_for(@pet) do |f| %>
          <%= f.input :name %>
          <%= f.input :age %>
          <%= f.input :species %>

          <%= f.input :price, as: :numeric %>
          <%= f.input :description %>

          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>

          <div class="form-actions">
            <%= f.button :submit, "Sign-up", class: "btn btn-success" %>
          </div>
        <% end %>

      </div> <!-- end form wrapper -->
    </div> <!-- end column-->
  </div> <!-- end row -->
</div> <!-- end container -->



